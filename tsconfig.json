{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@teddy/shared": ["packages/shared/src"],
      "@teddy/shared/*": ["packages/shared/src/*"]
    }
  },
  "references": [
    {
      "path": "./apps/bot"
    },
    {
      "path": "./apps/admin"
    },
    {
      "path": "./apps/worker"
    },
    {
      "path": "./packages/shared"
    }
  ]
}
